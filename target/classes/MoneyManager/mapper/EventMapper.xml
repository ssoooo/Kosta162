<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="GeneralAffairs.store.mapper.EventMapper">

	<resultMap type="Event" id="eventMap">
		<result property="payment" column="payment" />
	</resultMap>

	<insert id="registEvent" parameterType="Event">
		INSERT INTO
		event_table(eventId,groupId,memberId,eventName,regDate,budget,groupSupport)
		VALUES(event_seq.nextval,#{groupId,jdbcType=VARCHAR},#{memberId,jdbcType=VARCHAR},#{eventName,jdbcType=VARCHAR},SYSDATE,#{budget,jdbcType=VARCHAR},#{groupSupport,jdbcType=VARCHAR})
	</insert>

	<update id="updateEvent" parameterType="Event">
		UPDATE event_table
		SET eventName = #{eventName}
		WHERE eventId = #{eventId}
	</update>

	<delete id="deleteEvent" parameterType="int">
		DELETE FROM event_table
		WHERE eventId=#{eventId}
	</delete>

	<select id="retrieveEventById" parameterType="int" resultType="Event">
		SELECT eventId,groupId,memberId,balance,eventName,collection,regDate
		FROM event_table
		WHERE eventId=#{eventId}
	</select>

	<select id="retrieveAllEventsByGroupId" parameterType="int"
		resultType="Event">
		SELECT
		eventId,groupId,memberId,balance,eventName,collection,regDate
		FROM
		event_table
		WHERE groupId=#{groupId,jdbcType=VARCHAR}
	</select>

	<delete id="deleteMemberFromEvent" parameterType="map">
		DELETE FROM
		eventMember_table
		WHERE memberId = #{memberId} AND eventId = #{eventId}
	</delete>

	<insert id="registMemberToEvent" parameterType="map">
		INSERT INTO
		eventMember_table(memberId,eventId)
		VALUES(#{memberId},#{eventId})
	</insert>

	<update id="updatePayment" parameterType="Map">
		UPDATE
		eventMember_table SET
		payment = #{payment}
		WHERE eventId = #{eventId} AND
		memberId= #{memberId}
	</update>

	<update id="updateEventBalance" parameterType="Event">
		UPDATE event_table
		SET
		balance=#{balance}
		WHERE eventId=#{eventId}
	</update>

</mapper>